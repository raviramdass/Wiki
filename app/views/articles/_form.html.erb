<%= form_for @article do |f| %>
<%= f.collection_select :category_id, Category.all, :id, :name, { prompt: "Choose a category" } %><br />
<div class="field">
  <%= f.label :Title %><br>
  <%= f.text_field :title %>
</div>
<div class="field">
  <%= f.label :Content %><br>
  <%= f.text_area :content %>
</div>
<%= f.submit %>
<% end %>